<template id="template-carrito">
  <tr>
    <th scope="row">id</th>
    <td>title</td>
    <td>amount</td>
    <td>
      <button class="btn btn-info bt-sm">+</button>
      <button class="btn btn-danger btn-md">-</button>
    </td>
    <td>S/<span>50</span></td>
  </tr>
</template>

<template id="template-footer">
  <th scope="row" colspan="2">Total Productos</th>
  <td>10</td>
  <td>
    <button class="btn btn-danger btn-sm" id="vaciar-carrito">Vaciar todo</button>
    <button class="btn btn-success btn-md" id="pagar">Ir a Pagar</button>
  </td>
  <td class="font-weight-bold">S/<span>2000</span></td>
</template>

<script src="/js/app.js"></script>